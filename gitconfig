[user]
  email = laura@surminus.com
  name = Laura Martin

[push]
  default = simple
  autoSetupRemote = true

[alias]
  # Alphabet aliases
  a = add -p
  b = !git --no-pager branch -a --format='%(refname)' | rev | cut -d'/' -f1 | rev | sort | uniq |grep -v HEAD
  d = branch -D
  c = commit
  p = push origin HEAD
  s = status

  amend    = commit --amend
  amendf   = commit --amend --no-edit
  co       = !sh -c 'git stash; git stash apply; git checkout "$@"'
  del      = branch -D
  fixup    = commit --fixup
  last     = !git --no-pager log --oneline -10
  mine     = !git --no-pager branch --sort=committerdate -a --format='%(author) %(refname)' | grep -e 'Laura Martin\\|surminus' | rev | cut -d'/' -f1 | rev | uniq |grep -v HEAD
  nuke     = reset --hard @{upstream}
  old      = !git --no-pager branch --merged |grep -ev 'master\\|main'
  pick-axe = log -p -S
  pr       = pull-request
  pushf    = push --force-with-lease origin HEAD
  save     = !git add . && git commit --no-verify -m \"WIP: auto save at $(date '+%Y-%m-%d %H:%M:%S')\"
  squash   = rebase -i --autosquash
  st       = status
  tidy     = clean -fd .
  tip      = rev-parse HEAD
  tree     = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue) <%an> %Creset' --abbrev-commit
  undo     = reset HEAD^

[include]
  path = ~/.gitconfig.secret

[pull]
  rebase = true

[add]
  patch = true

[commit]
  verbose = true

[github]
  user = surminus

[rebase]
  autoStash = true
  autoSquash = true

[core]
  attributesfile = /home/laura/.gitattributes
  pager = less -XFR

[remote "origin"]
  prune = true

[init]
  defaultBranch = main

# Use delta
# https://github.com/dandavison/delta
[include]
  path = ~/.delta/themes.gitconfig

[pager]
  blame = delta
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only --features=interactive
  singleKey = true

[delta]
  line-numbers = true
  features = decorations unobtrusive-line-numbers
  hyperlinks = true

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = file box
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = omit

[credential "https://github.com"]
  helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
  helper = !/usr/bin/gh auth git-credential
