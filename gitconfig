[user]
  email = surminus@gmail.com
  name = Laura Martin

[push]
  default = simple

[alias]
  # Alphabet aliases
  a = add -p
  c = commit
  p = push origin HEAD
  s = status

  st = status
  br = branch
  co = !sh -c 'git stash; git stash apply; git checkout "$@"'
  tidy = clean -fd .
  pick-axe = log -p -S
  squash = rebase -i --autosquash
  fixup = commit --fixup
  nuke = reset --hard origin/master
  last = --no-pager log --oneline -10
  pr   = pull-request
  pushf = push --force-with-lease origin HEAD
  ammend = commit --amend --no-edit

[pull]
  rebase = preserve

[add]
  patch = true

[commit]
  verbose = true

[github]
  user = surminus

[interactive]
  singleKey = true

[rebase]
  autoStash = true
  autoSquash = true

[core]
  excludesfile = /home/laura/.gitignore_global
