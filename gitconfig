[user]
  email = surminus@gmail.com
  name = Laura Martin

[push]
  default = simple

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  pick-axe = log -p -S
  squash = rebase -i --autosquash
  fixup = commit --fixup
  nuke = reset --hard origin/master
  last = --no-pager log --oneline -10
  pr   = pull-request
  pushf = push --force-with-lease origin HEAD
  ammend = commit -a --amend -C HEAD
  repush = "!f() { \
                    if [[ $(git rev-parse --abbrev-ref HEAD) != 'master' ]]; then git ammend && git pushf; fi; \
                  }; f"

[pull]
  rebase = preserve

[add]
  patch = true

[github]
  user = surminus

[interactive]
  singleKey = true

[rebase]
  autoStash = true
  autoSquash = true
