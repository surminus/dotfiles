[user]
  email = surminus@gmail.com
  name = Laura Martin

[push]
  default = simple

[alias]
  # Alphabet aliases
  a = add -p
  c = commit
  p = push origin HEAD
  s = status

  st = status
  b = !git --no-pager branch -a --format='%(refname)' | rev | cut -d'/' -f1 | rev | sort | uniq |grep -v HEAD
  co = !sh -c 'git stash; git stash apply; git checkout "$@"'
  tidy = clean -fd .
  pick-axe = log -p -S
  squash = rebase -i --autosquash
  fixup = commit --fixup
  nuke = reset --hard origin/master
  last = --no-pager log --oneline -10
  pr   = pull-request
  pushf = push --force-with-lease origin HEAD
  ammend = commit --amend --no-edit
  mine = !git --no-pager branch -a --format='%(author) %(refname)' | grep -e 'Laura Martin\\|surminus' | rev | cut -d'/' -f1 | rev | sort | uniq |grep -v HEAD
  old = !git --no-pager branch --merged |grep -v master
  bin = !git branch -D $(git --no-pager branch --merged |grep -v master)

[pull]
  rebase = preserve

[add]
  patch = true

[commit]
  verbose = true

[github]
  user = surminus

[interactive]
  singleKey = true

[rebase]
  autoStash = true
  autoSquash = true

[core]
  excludesfile = /home/laura/.gitignore_global
[remote "origin"]
	prune = true
