{
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": [
        "terraform"
      ]
    }
  },
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.formatOnType": true,
  "codeLens.enable": true,
  "explorer.file.hiddenRules": {
    "filenames": ["node_modules", ".git"],
    "patternMatches": []
  }
}
