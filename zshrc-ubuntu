# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

export EDITOR=vim

ZSH_THEME="robbyrussell"
test -f ~/.oh-my-zsh/custom/themes/surminus.zsh-theme && ZSH_THEME="surminus"

plugins=(
  bundler
  capistrano
  emoji
  git
  github
  golang
  kubectl
  pass
  rake
  ruby
  ubuntu
  vagrant
  zsh-autosuggestions
  zsh-completions
)

autoload -U compinit && compinit

# Go
if test -d /usr/local/go; then
  export PATH=$PATH:/usr/local/go/bin
  export GOPATH="$HOME/go"
  export PATH=$PATH:$(go env GOPATH)/bin
fi

export PATH="$PATH:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:"

export PATH="$PATH:$HOME/local/bin"

# Terralearn
if test -d ~/futurelearn/futurelearn-terraform/bin; then
  export PATH="$PATH:$HOME/futurelearn/futurelearn-terraform/bin"
fi

source $ZSH/oh-my-zsh.sh

# To get autosuggestions to work, also set "fg-239" in
# ~/.oh-my-zsh/custom/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
export TERM="xterm-256color"

if [ -e /usr/local/bin/hub ]; then
  eval "$(hub alias -s)"
  if [ -e ~/.zsh/completions/_hub ]; then
    fpath=(~/.zsh/completions $fpath)
    autoload -U compinit && compinit
  fi
fi

# Bundle
if [[ "$(grep CODENAME /etc/lsb-release |cut -d "=" -f2)" == "xenial" ]]; then
  alias bi="CC=/usr/bin/gcc-4.9 bundle install --path ~/.bundle"
else
  alias bi="bundle install --path ~/.bundle"
fi

# Like OSX
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

# rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# tfenv
export PATH="$HOME/.tfenv/bin:$PATH"

source ~/.dotfiles/config/aliases
source ~/.dotfiles/config/completions
test -f /usr/local/bin/colordiff && source ~/.dotfiles/config/diff
