# Vim
alias vi=vim
alias bim=vim

# Bundle
alias bi="bundle install --path ~/.bundle"

# Pass
alias pass-fetch="pass git pull"
alias pass-push="pass git push"
alias pass-sync="pass-fetch && pass-push"

# Git & Hub
alias gcm="git checkout master && git pull"
alias gpr="git push origin head && git pull-request"
alias gbr="git --no-pager for-each-ref --format='%(committerdate) %09 %(authorname) %09 %(refname)' | sort -k5n -k2M -k3n -k4n"

alias ga="git a"
alias gc="git c"
alias gg="git --no-pager grep"
alias gp="git p"

# Misc
alias reload_shell="exec $SHELL"
alias shrug="echo '¯\_(ツ)_/¯'"

alias jenkins="fligo ssh -e build -u ubuntu -r jenkins --use-iam-auth"

alias flocker="PROJECT_HOME=~/futurelearn/futurelearn ~/futurelearn/futurelearn/script/flocker"

alias plex-sync="sudo rsync -av ~/sync/plex/ /data/plex && sudo chown -R plex:plex /data/plex"
